gzip hello.txt,	gzip -k hello.txt #(-k, --keep don't del input file)
gzip -d hello.txt.gz	#d for Decompress
gzip -dk hello.txt.gz	#k is not to lose org file

tar -czf archive.tar.gz foldername	#c to create
tar -xzf archive.tar.gz 			#x to extract
tar -xzf archive.tar.gz -C ~/Documents #C to change dir


