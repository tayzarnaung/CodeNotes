ls --help (to know partner of ls)
ls -al    (-a, --all  & -l use long listing format)
ls -l > filename.txt
echo "Here is your desired string." > filename.txt
echo "Hello, World"


mkdir foldername
rmdir emptyfolder,
rm -r foldername, rm -r * , rm filename.txt


cp source_path/filename.jpg ~/Pictures
cp -r foldername 	destination_path
mv filename.txt ~/Documents
mv foldername ~/Documents


cat /home/test.txt  #to view text or code from script
nano /home/test.txt
gedit /home/test.txt
touch /home/test.txt #to crate file


