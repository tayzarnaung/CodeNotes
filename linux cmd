sudo apt install vlc gparted gnome-tweaks gnome-shell-extensions -y
sudo apt install ./filename.deb (or) sudo dpkg -i filename.deb
sudo apt-get install -f (autofix crashed installation due to poweroff or connection)

sudo apt-add-repository ppa:webupd8team/gnome3
sudo apt update          (to make sure PPA is up-to-date)
sudo apt upgrage -y 	 (to update pkg)
sudo apt dist-upgrade -y (to update & install new pkg)


sudo apt remove vlc -y  (to remove binary files)
sudo apt autoremove vlc (to remove also library, dependency)

sudo apt remove vlc --purge
sudo apt autoremove vlc --purge
(purge to remove all inculding configuration & data files)

sudo apt-get autoremove	(to remove unused depedency)
sudo apt-get autoremove --purge

sudo rm -rf /var/log/*

sudo apt install aptitude 
sudo aptitude autoclean (&) clean

(   autoclean removes packages in .cache that can't be downloaded.
    clean 	  removes all cached packages.  )

-	-	-	-	-	-	-	-	-	-	-	-	-	-	-	-


chmod (to manage file/folder permission)
u(Owner User)	g(Group User)	o(Other User)	a(All)
+(allow permission)	-(refuse permission)
r(read)	w(write)	x(execute)

ls -l (check file permission)
chmod +x filename (executable file for all users)
chmod g+r filename (or) chmod g+rx filename
chmod g+rx foldername (x is required for folder)
chmod ugo+r filename/chmod a+r filename

chmod go-r filename (- refuse permission to group & other)
chmod -x file/foldername


-	-	-	-	-	-	-	-	-	-	-	-	-	-	-	-

cd /mnt
ls
sudo chown wc /mnt/id(e.g.548356426)	
# Change owner from sudo, super user, root to wc


